#:kivy 1.0

<AppView>:
    orientation: 'vertical'
    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'CalcPy'
                with_previous: False
            ActionOverflow:
            ActionButton:
                important: True
                text: 'Clear'
            ActionGroup:
                ActionButton:
                    text: 'Save'
                ActionButton:
                    text: 'Load'
    ScrollableText:

<ScrollableText>:
        
<PycalcCodeInput>:
    id: input
    size_hint_y: None
    multiline: False
    height: self.font_size * 1.25 + 10
    foreground_color: (1, 1, 1, 1)
    cursor_color: (0.8, 0.8, 0.8, 0.9)
    background_color: (0.2, 0.2, 0.2, 1) if self.focus else (0.1, 0.1, 0.1, 1)

<CodeOutput>:
    size_hint_y: None
    id: label
    text_size: self.width, None
    padding: 5, 5